<%- include('../../partials/header.ejs')  %> 
<%- include('../../partials/navbar.ejs')  %>

<body>
    <div class="container mb-5">
        <div class="card">
            <div class="card-header bg-dark text-white text-center">
                <h2 class="mt-3">Usuários</h2>
                <a class="btn btn-success mt-3" href="users/create">Cria Novo Usuário</a>
                <hr>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <th>
                                    <%= user.id %>
                                </th>
                                <th>
                                    <%= user.email %>
                                </th>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

