        <%- include('../../partials/navbar.ejs') %>

            <div class="container pt-5">
                <hr>
                <div class="card row">
                    <div class="card-header bg-dark text-white">
                        <h2 class="text-center">Editar Categoria <%= category.title %> </h2>
                    </div>
                    <form action="/categories/update" method="POST" class="col-10 align-self-center pt-5">
                        <input class="form-control row-10" type="text" name="title" placeholder="Defina o nome da categoria" value="<%= category.title %>">
                        <input type="hidden" name="id" value="<%= category.id %>">
                        <div align='center' class="mt-3 mb-5">
                            <button type="submit" class="btn btn-success">Alterar</button>
                        </div>
                    </form>
                </div>

            </div>

    </body>
